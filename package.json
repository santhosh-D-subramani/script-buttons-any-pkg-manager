{
  "name": "script-buttons-adv",
	"displayName": "Script Buttons Advanced",
	"publisher": "santhoshDsubramani",
	"repository": {
    "type": "git",
    "url": "https://github.com/santhosh-D-subramani/script-buttons-any-pkg-manager.git"
  },
	"description": "",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"npm",
		"bun",
		"pnpm",
		"yarn",
		"node",
		"script",
		"scripts",
		"button",
		"buttons",
		"shortcuts",
		"actions",
		"package.json",
		"script-buttons.json"
	],
	"icon": "images/icon.png",
	"activationEvents": [
        "onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
    "commands": [
        {
            "command": "script-buttons.refreshScripts",
            "title": "Refetch the scripts from your package.json file"
        }
    ],
    "configuration": {
        "title": "Script Buttons",
        "properties": {
            "script-buttons.packageManager": {
                "type": "string",
                "default": "npm",
                "enum": [
                    "npm",
                    "pnpm",
                    "yarn",
                    "bun"
                ],
                "description": "Select the package manager to use (npm, pnpm, yarn, bun)."
            }
        }
    }
},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
